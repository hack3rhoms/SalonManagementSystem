@model Login

@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-lg" style="width: 350px; border-radius: 15px; overflow: hidden;">
        <div class="card-body">
            <h3 class="text-center mb-4">Login</h3>
            <form asp-action="Login" method="post" id="loginForm">
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label for="Email" class="font-weight-bold">Email</label>
                    <input asp-for="Email" class="form-control border-0 border-bottom" type="email" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>


                <div class="form-group mb-3">
                    <label for="Password" class="font-weight-bold">Password</label>
                    <input asp-for="Password" class="form-control border-0 border-bottom" type="password" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-block w-100 mt-4 py-2">Login</button>

                <div class="text-center mt-4">
                    <span>Don't have an account?<a href="@Url.Action("Register", "Home")" class="text-primary text-decoration-none">Signup</a></span>
                </div>
            </form>
        </div>
    </div>
</div>


}
