@model IEnumerable<SalonManagementSystem.Models.Service>

@{
    ViewData["Title"] = "Home - Beauty Salon";
}

<div class="container mt-5">
    <!-- Welcome Section -->
    <div class="row mb-4 align-items-center">
        <!-- Image Section -->
        <div class="col-md-6">
            <img src="/image/first.jpg" class="img-fluid" alt="Beauty Salon Image" />
        </div>

        <!-- Text Section -->
        <div class="col-md-6 text-center">
            <h1 class="text-dark display-3 font-weight-bold mb-4">Welcome to the Beauty Salon</h1>
            <p class="text-dark lead mb-4">We are here to help you achieve the best beauty experience.</p>
            <!-- Button for action -->
            <a href="@Url.Action("Services", "Home")" class="btn btn-primary btn-lg">Explore Our Services</a>
        </div>
    </div>

    <br />
    <br />
    <br />

    <!-- Available Services Section -->
    <div class="row mb-4">
        <div class="col">
            <h3>Available Services</h3>
            <div class="row">
                @if (Model != null && Model.Any())
                {
                    foreach (var service in Model)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                @if (service.ImageData != null)
                                {
                                    <img src="data:@service.ImageType;base64,@Convert.ToBase64String(service.ImageData)" class="card-img-top" alt="@service.Name">
                                }
                                else
                                {
                                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="@service.Name">
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@service.Name</h5>
                                    <p class="card-text">Price: $@service.Price</p>
                                    <p class="card-text">Duration: @service.Duration minutes</p>

                                    <!-- سجل Button -->
                                    <a href="@Url.Action("Appointments", "Home", new { serviceId = service.Id })"
                                       class="btn btn-success btn-block">Register</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col">
                        <p class="text-muted">No services available at the moment.</p>
                    </div>
                }
            </div>
        </div>
    </div>



    <!-- Appointment Booking Section -->
    <div class="row mb-4">
        <div class="col">
            <h3>Book Your Appointment Now</h3>
            <a href="/appointments" class="btn btn-primary">Book Appointment</a>
        </div>
    </div>

    <!-- AI Suggestions Section -->
    <div class="row mb-4">
        <div class="col">
            <h3>AI Suggestions</h3>
            <p>Upload a photo to get hair styling or color suggestions using AI.</p>
            <a href="/ai-suggestions" class="btn btn-secondary">Try Now</a>
        </div>
    </div>

    <!-- Contact Us Section -->
    <div class="row mb-4">
        <div class="col text-center">
            <h3>Contact Us</h3>
            <p>If you have any inquiries or feedback, feel free to contact us at the following:</p>
            <p><strong>Phone Number: </strong>+123 456 789</p>
            <p><strong>Email: </strong>info@beautysalon.com</p>
        </div>
    </div>
</div>
