@{
    ViewData["Title"] = "Home - Beauty Salon";
}

<div class="container mt-5">
    <!-- Welcome Section -->
    <div class="row mb-4 align-items-center">
        <!-- Image Section -->
        <div class="col-md-6">
            <img src="/image/first.jpg" class="img-fluid" alt="Beauty Salon Image" />
        </div>

        <!-- Text Section -->
        <div class="col-md-6 text-center">
            <h1 class="text-dark display-3 font-weight-bold mb-4">Welcome to the Beauty Salon</h1>
            <p class="text-dark lead mb-4">We are here to help you achieve the best beauty experience.</p>
            <!-- Button for action -->
            <a href="@Url.Action("Services", "Home")" class="btn btn-primary btn-lg">Explore Our Services</a>

        </div>
    </div>
</div>

<br />
<br />
<br />

    <!-- Available Employees Section -->
    <div class="row mb-4">
        <div class="col">
            <h3>Available Employees Today</h3>
            <div class="row">
                <!-- Employee 1 -->
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="Employee 1">
                        <div class="card-body">
                            <h5 class="card-title">Asma Mohamed</h5>
                            <p class="card-text">Specialized in Haircuts and Hair Coloring</p>
                        </div>
                    </div>
                </div>
                <!-- Employee 2 -->
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="Employee 2">
                        <div class="card-body">
                            <h5 class="card-title">Mohamed Ali</h5>
                            <p class="card-text">Expert in Special Hairstyles and Facial Cleaning</p>
                        </div>
                    </div>
                </div>
                <!-- Employee 3 -->
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="Employee 3">
                        <div class="card-body">
                            <h5 class="card-title">Sara Khaled</h5>
                            <p class="card-text">Expert in Body Massage and Hair Coloring</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Appointment Booking Section -->
    <div class="row mb-4">
        <div class="col">
            <h3>Book Your Appointment Now</h3>
            <a href="/appointments" class="btn btn-primary">Book Appointment</a>
        </div>
    </div>

    <!-- AI Suggestions Section -->
    <div class="row mb-4">
        <div class="col">
            <h3>AI Suggestions</h3>
            <p>Upload a photo to get hair styling or color suggestions using AI.</p>
            <a href="/ai-suggestions" class="btn btn-secondary">Try Now</a>
        </div>
    </div>

    <!-- Contact Us Section -->
    <div class="row mb-4">
        <div class="col text-center">
            <h3>Contact Us</h3>
            <p>If you have any inquiries or feedback, feel free to contact us at the following:</p>
            <p><strong>Phone Number: </strong>+123 456 789</p>
            <p><strong>Email: </strong>info@beautysalon.com</p>
        </div>
    </div>
</div>
