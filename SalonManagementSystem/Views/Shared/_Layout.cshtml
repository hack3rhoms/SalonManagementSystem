<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - SalonManagementSystem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SalonManagementSystem.styles.css" asp-append-version="true" />
    <style>
        .navbar-nav .nav-link {
            color: white;
            transition: color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #ffc107;
            }

        .navbar {
            background: linear-gradient(to bottom, #1B1F34, rgba(27, 31, 52, 1.8));
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-bold text-warning" href="#">Bitar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item me-4">
                        <a class="nav-link fs-5" href="#home">Home</a>
                    </li>
                    <li class="nav-item me-4">
                        <a class="nav-link fs-5" href="#appointments">Appointments</a>
                    </li>
                    <li class="nav-item me-4">
                        <a class="nav-link fs-5" href="#services">Services</a>
                    </li>
                    <li class="nav-item me-4">
                        <a class="nav-link fs-5" href="#AI-suggestions">AI-suggestions</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-warning rounded-pill px-4 py-2" href="#Login">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SalonManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Bootstrap and Font Awesome Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
