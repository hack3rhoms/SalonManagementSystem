@model IEnumerable<SalonManagementSystem.Models.Service>

<h2>Service List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Service Name</th>
            <th>Price</th>
            <th>Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Price.ToString("C")</td> <!-- عرض السعر بصيغة العملة -->
                <td>@service.Duration minutes</td>
                <td>
                    <a href="@Url.Action("EditService", "Admin", new { id = service.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("DeleteService", "Admin", new { id = service.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
