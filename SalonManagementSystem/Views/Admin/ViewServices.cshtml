@model IEnumerable<SalonManagementSystem.Models.Service>

<div class="container mt-5">
    <h2 class="text-center">Services List</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var service in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-light rounded">
                        @if (service.ImageData != null)
                        {
                            <img src="data:@service.ImageType;base64,@Convert.ToBase64String(service.ImageData)" class="card-img-top" alt="@service.Name">
                        }
                        <div class="card-body">
                            <h5 class="card-title text-dark">@service.Name</h5>
                            <p class="card-text text-muted">
                                Price: $@service.Price <br />
                                Duration: @service.Duration minutes
                            </p>
                            <form asp-action="DeleteService" asp-controller="Admin" method="post" class="mt-3">
                                <input type="hidden" name="id" value="@service.Id" />
                                <button type="submit" class="btn btn-danger btn-block">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-center text-muted">No services found.</p>
            </div>
        }
    </div>
</div>
