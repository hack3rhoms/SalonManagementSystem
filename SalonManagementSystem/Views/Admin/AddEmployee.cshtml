<form asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ServiceId">Service</label>
        <select asp-for="ServiceId" class="form-control">
            <option value="">Select a service</option>
            @foreach (var service in ViewBag.Services)
            {
                <option value="@service.Id">@service.Name</option>
            }
        </select>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="StartWorkingHours">Start Working Hours</label>
        <select asp-for="StartWorkingHours" class="form-control" id="StartWorkingHours">
            <option value="">Select a start time</option>
            @foreach (var slot in ViewBag.AvailableSlots)
            {
                <option value="@slot">@slot</option>
            }
        </select>
        <span asp-validation-for="StartWorkingHours" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="EndWorkingHours">End Working Hours</label>
        <select asp-for="EndWorkingHours" class="form-control" id="EndWorkingHours">
            <option value="">Select an end time</option>
            @foreach (var slot in ViewBag.AvailableSlots)
            {
                <option value="@slot">@slot</option>
            }
        </select>
        <span asp-validation-for="EndWorkingHours" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Add Employee</button>
</form>

