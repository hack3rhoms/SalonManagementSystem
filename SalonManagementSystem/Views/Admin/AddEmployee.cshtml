@model SalonManagementSystem.Models.Employee

<h2>Add New Employee</h2>

<form asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ServiceId">Service</label>
        <select asp-for="ServiceId" class="form-control" id="ServiceId">
            <option value="">Select a service</option>
            @if (ViewBag.Services != null)
            {
                @foreach (var service in ViewBag.Services)
                {
                    <option value="@service.Id">@service.Name</option>
                }
            }
            else
            {
                <option value="">No services available</option>
            }
        </select>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="StartWorkingHours">Start Working Hours</label>
        <input asp-for="StartWorkingHours" type="time" class="form-control" id="StartWorkingHours" step="60" />
        <span asp-validation-for="StartWorkingHours" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="EndWorkingHours">End Working Hours</label>
        <input asp-for="EndWorkingHours" type="time" class="form-control" id="EndWorkingHours" step="60" />
        <span asp-validation-for="EndWorkingHours" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary mt-3">Add Employee</button>
</form>
