<div class="container mt-5">
    <div class="row">
        <!-- Add Service Card -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-lg border-light rounded animate__animated animate__fadeInUp">
                <img src="~/image/services.jpg" class="card-img-top" alt="Add Service">
                <div class="card-body">
                    <h5 class="card-title text-dark">Add Service</h5>
                    <p class="card-text text-muted">Add a new service to the salon.</p>
                    <a href="@Url.Action("AddService", "Admin")" class="btn btn-success btn-block">Add Service</a>
                </div>
            </div>
        </div>

        <!-- View Services Card -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-lg border-light rounded animate__animated animate__fadeInUp">
                <img src="~/image/service_view.jpg" class="card-img-top" alt="View Services">
                <div class="card-body">
                    <h5 class="card-title text-dark">View Services</h5>
                    <p class="card-text text-muted">View all available services.</p>
                    <a href="@Url.Action("ViewServices", "Admin")" class="btn btn-info btn-block">View Services</a>
                </div>
            </div>
        </div>
    </div>
</div>
